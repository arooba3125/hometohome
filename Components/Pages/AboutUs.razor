@page "/about"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Web

<style>
    :root {
        --primary-color: #000000; /* Black */
        --accent-color: #ffffff; /* White */
        --secondary-color: #4b5563; /* Medium gray */
        --text-color: #1f2937; /* Dark gray */
        --bg-light: #f9fafb; /* Light gray */
        --bg-lighter: #fefefe; /* Slightly lighter gray for Story */
        --bg-lightest: #f3f4f6; /* Even lighter gray for Mission */
        --bg-dark: #111827; /* Dark gray */
        --accent-pink: #ff6f61; /* Inspired by the image's pinkish tone */
    }

    .about-page {
        font-family: 'Poppins', 'Segoe UI', sans-serif;
        color: var(--text-color);
        line-height: 1.7;
        background-color: var(--bg-light);
        overflow-x: hidden;
    }

    /* Section Base Styling */
    .section {
        padding: 4rem 2rem;
        opacity: 0;
        transform: translateY(40px);
        animation: fadeInUp 0.8s ease forwards;
        border-bottom: 1px solid #e5e7eb;
        position: relative; /* For separator positioning */
    }

    .section:nth-child(1) { animation-delay: 0s; }
    .section:nth-child(2) { animation-delay: 0.3s; }
    .section:nth-child(3) { animation-delay: 0.6s; }
    .section:nth-child(4) { animation-delay: 0.9s; }
    .section:nth-child(5) { animation-delay: 1.2s; }
    .section:nth-child(6) { animation-delay: 1.5s; }
    .section:nth-child(7) { animation-delay: 1.8s; }
    .section:nth-child(8) { animation-delay: 2.1s; }

    @@keyframes fadeInUp {
        to { opacity: 1; transform: translateY(0); }
    }

    /* Separator Styling */
    .section:not(:last-child)::after {
        content: '';
        display: block;
        width: 80px;
        height: 4px;
        background: var(--accent-pink);
        margin: 2rem auto;
        border-radius: 2px;
        opacity: 0;
        animation: fadeIn 0.8s ease forwards;
        animation-delay: 0.5s;
    }

    /* Hero Section */
    .hero-section {
        background: linear-gradient(145deg, var(--accent-pink) 0%, var(--bg-light) 100%);
        padding: 6rem 2rem;
        text-align: left;
        min-height: 80vh;
        display: flex;
        align-items: center;
        border-bottom: none;
    }

    .hero-section h1 {
        font-size: 3.5rem;
        font-weight: 800;
        letter-spacing: -0.025em;
        animation: slideIn 1s ease-out;
    }

    .hero-section p.lead {
        font-size: 1.3rem;
        max-width: 600px;
        margin: 1.5rem 0;
        color: var(--text-color);
        animation: fadeIn 1.2s ease-out 0.2s forwards;
        opacity: 0;
    }

    .hero-section .btn-primary {
        background: var(--accent-pink);
        color: var(--accent-color);
        border: none;
        padding: 0.8rem 2rem;
        font-size: 1.1rem;
        border-radius: 50px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .hero-section .btn-primary:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
        background: #ff5a4a;
    }

    /* Mission Section */
    .mission-section {
        background: var(--bg-lightest);
        text-align: center;
    }

    .mission-section .card {
        background: var(--accent-color);
        border: none;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
        margin-bottom: 2rem;
    }

    .mission-section .card:hover {
        transform: translateY(-10px);
    }

    .mission-section .card-img-top {
        height: 150px;
        object-fit: cover;
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
    }

    .mission-section .card-body {
        padding: 2rem;
    }

    .mission-section .card-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--primary-color);
    }

    .mission-section .card-text {
        color: var(--text-color);
    }

    .mission-section .btn-link {
        color: var(--accent-pink);
        text-decoration: none;
        font-weight: 500;
    }

    .mission-section .btn-link:hover {
        text-decoration: underline;
    }

    .mission-details {
        margin-top: 3rem;
    }

    .mission-details ul.list-unstyled {
        display: inline-block;
        text-align: left;
        max-width: 600px;
    }

    .mission-details ul.list-unstyled li {
        position: relative;
        padding-left: 2.5rem;
        margin-bottom: 1.5rem;
        font-size: 1.15rem;
        color: var(--text-color);
        transition: transform 0.3s ease;
    }

    .mission-details ul.list-unstyled li:hover {
        transform: translateX(10px);
    }

    .mission-details ul.list-unstyled li::before {
        content: "✓";
        position: absolute;
        left: 0;
        color: var(--primary-color);
        font-size: 1.3rem;
        font-weight: bold;
        transition: transform 0.3s ease;
    }

    .mission-details ul.list-unstyled li:hover::before {
        transform: scale(1.2);
    }

    .mission-details p.fs-5.text-center {
        max-width: 750px;
        margin-left: auto;
        margin-right: auto;
    }

    /* Story Section */
    .story-section {
        background: var(--bg-lighter);
        padding: 4rem 2rem;
    }

    .story-section h2 {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--primary-color);
    }

    .story-section p {
        font-size: 1.1rem;
        max-width: 800px;
        margin: 0 auto;
    }

    /* Team Section */
    .team-section {
        background: var(--bg-light);
    }

    .team-section .card {
        border: none;
        border-radius: 20px;
        overflow: hidden;
        background: var(--accent-color);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
        transition: transform 0.4s ease, box-shadow 0.4s ease;
    }

    .team-section .card:hover {
        transform: translateY(-12px);
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.3);
    }

    .team-section .card-img-top {
        height: 350px;
        object-fit: cover;
        object-position: top;
        transition: transform 0.4s ease;
    }

    .team-section .card:hover .card-img-top {
        transform: scale(1.08);
    }

    .team-section .card-title {
        font-size: 1.3rem;
        font-weight: 600;
        color: var(--primary-color);
    }

    /* Call to Action Section */
    .cta-section {
        background: var(--accent-pink);
        color: var(--accent-color);
        text-align: center;
    }

    .cta-section .btn-primary {
        background: var(--accent-color);
        color: var(--accent-pink);
        border: 2px solid var(--accent-color);
        padding: 0.8rem 2rem;
        border-radius: 50px;
    }

    .cta-section .btn-primary:hover {
        background: #e5e5e5;
        color: var(--accent-pink);
    }

    /* Achievements Section */
    .achievements-section {
        background: var(--bg-dark);
        color: var(--accent-color);
    }

    .achievements-section h3 {
        font-size: 2.8rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        text-shadow: 0 0 5px rgba(255, 255, 255, 0.3);
    }

    .achievements-section p {
        font-size: 1.1rem;
        color: #d1d5db;
    }

    .achievements-section .col-md-3 {
        transition: transform 0.3s ease;
    }

    .achievements-section .col-md-3:hover {
        transform: scale(1.1);
    }

    .achievements-section .achievement-card {
        background: rgba(255, 255, 255, 0.1);
        padding: 2rem;
        border-radius: 10px;
        margin-bottom: 2rem;
    }

    /* Blog/News Section */
    .blog-section {
        background: var(--bg-light);
    }

    .blog-section .card {
        border: none;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

    .blog-section .card:hover {
        transform: translateY(-10px);
    }

    .blog-section .card-img-top {
        height: 200px;
        object-fit: cover;
    }

    .blog-section .card-body {
        padding: 1.5rem;
    }

    .blog-section .card-title {
        font-size: 1.2rem;
        font-weight: 600;
        color: var(--primary-color);
    }

    /* Footer */
    .footer {
        background: var(--bg-dark);
        color: var(--accent-color);
        padding: 3rem 2rem;
        text-align: left;
    }

    .footer a {
        color: var(--accent-pink);
        text-decoration: none;
    }

    .footer a:hover {
        text-decoration: underline;
    }

    .footer .form-control {
        background: #2d3748;
        border: none;
        color: var(--accent-color);
        border-radius: 5px;
    }

    .footer .btn {
        background: var(--accent-pink);
        color: var(--accent-color);
        border: none;
    }

    /* Animations */
    @@keyframes slideIn {
        from { opacity: 0; transform: translateX(-20px); }
        to { opacity: 1; transform: translateX(0); }
    }

    @@keyframes fadeIn {
        to { opacity: 1; }
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .hero-section h1 { font-size: 2.5rem; }
        .hero-section p.lead { font-size: 1rem; }
        .section { padding: 3rem 1rem; }
        .blog-section .card-img-top { height: 150px; }
        .team-section .card-img-top { height: 280px; }
        .achievements-section h3 { font-size: 2rem; }
        .story-section .row { flex-direction: column-reverse; }
    }

    @@media (max-width: 576px) {
        .hero-section { padding: 4rem 1rem; }
        .blog-section .card-img-top { height: 120px; }
        .team-section .card-img-top { height: 220px; }
        .achievements-section .col-md-3 { margin-bottom: 2rem; }
        .footer .col-md-3 { margin-bottom: 2rem; }
    }
</style>

